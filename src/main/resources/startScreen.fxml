<?xml version="1.0" encoding="UTF-8" ?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.StartController"
           prefWidth="600"
           prefHeight="800"
           style="-fx-background-image: url('tetris.jpeg');
                 -fx-background-size: cover;
                 -fx-background-position: center;
                 -fx-background-repeat: no-repeat;">

    <StackPane fx:id="themePreview"
               prefWidth="400" prefHeight="300"
               style="-fx-background-color: black; -fx-border-color: white; -fx-border-width: 2;"/>
    <VBox alignment="CENTER"
          spacing="20"
          StackPane.alignment="CENTER">

        <Button text="Start game"
                fx:id="startButton"
                style="-fx-font-size: 24px; -fx-background-color: #333; -fx-text-fill: white; -fx-padding: 8 30; -fx-background-radius: 8;"
                onAction="#startGame"/>

        <Button text="Instructions"
                fx:id="instructionsButton"
                style="-fx-font-size: 20px;
                       -fx-background-color: #444;
                       -fx-text-fill:white;
                       -fx-padding: 6 24;
                       -fx-background-radius: 8;"
                onAction="#showInstructions"/>

        <Button text="Timed Mode"
                fx:id="timedModeButton"
                style="-fx-font-size: 20px; -fx-background-color: darkred; -fx-text-fill: white; -fx-padding: 6 24; -fx-background-radius: 8;"
                onAction="#chooseTimeMode"/>

        <Button text="←"
                onAction="#previousTheme"/>

        <Button text="→"
                onAction="#nextTheme"/>
    </VBox>


</StackPane>